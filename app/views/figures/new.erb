<h1>Create a new figure:</h1>

<form action="/figures" method="POST">
    <label>Name:</label>
    <input type="text" name="figure[name]" id="figure_name"><br><br>

    <label>Landmarks:</label><br>
    <% Landmark.all.each do |landmark| %>
        <input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>"><%= landmark.name %>
    <% end %><br><br>

    <label>Or create new one:</label>
       <label>Name:</label>
       <input type="text" name="landmark[name]" id="new_landmark">
       <label>Year Completed:</label>
       <input type="text" name="landmark[year_completed]"><br><br>
    


    <label>Titles:</label><br>
    <% Title.all.each do |title| %>
      <input id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>"><%= title.name %>
    <% end %><br><br>
   
    <label>Or create new one:</label>
        <input type="text" name="title[name]" id="new_title"><br><br>
    

    <input type="submit" value="Create New Figure">	
</form>