<h1>Update <%= @figure.name %></h1>

<form action="/figures/<%=@figure.id%>" method="post">
	<input type="hidden" id="hidden" name="_method" value="patch">

	<label>Name:</label>
	<input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"><br><br>

  <label>Titles:</label>
	<% Title.all.each do |title| %>
        <label><%= title.name %></label>
        <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id %>"
        <%= 'checked' if @figure.titles.include?(title) %>><%= title.name %></input>
	<% end %><br><br>

	<label>Or create new one:</label>
        <input type="text" name="title[name]" id="new_title"><br><br>


  <label>Landmarks:</label>

	<% Landmark.all.each do |landmark| %>
        <label><%= landmark.name %></label>
        <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%= landmark.id %>"><%='checked' if @figure.landmarks.include?(landmark) %>
	<% end %><br><br>
  

  <label>Or create new one:</label>
       <label>Name:</label>
       <input type="text" name="landmark[name]" id="new_landmark">
       <label>Year Completed:</label>
       <input type="text" name="landmark[year_completed]"><br><br>

  
  <input type="submit" value="Edit Figure">
</form>


